.columns.small-12.large-6.panel.large-centered
  %h2= make_page_title('devise_sessions', 'new')
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row
      .columns.large-4
        = f.label :email, nil, class: 'inline'
      .columns.large-8
        = f.email_field :email, autofocus: true
    .row
      .columns.large-4
        = f.label :password, nil, class: 'inline'
      .columns.large-8
        = f.password_field :password
    - if devise_mapping.rememberable?
      .row
        = f.label :remember_me, class: 'columns large-8 large-offset-4' do
          = f.check_box :remember_me
          = f.object.class.human_attribute_name(:remember_me)
    .row
      .columns.large-8.large-offset-4
        = link_to t('helpers.links.forgot_my_password'), new_user_password_path
    .row.actions
      .columns.large-12
        = f.submit t('helpers.submit.sign_in'), class: 'button expand'

= content_for :title do
  #{make_page_title('devise_sessions', 'new')} | #{site_title}
