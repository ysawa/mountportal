.columns.small-12.large-6.panel.large-centered
  %h2= make_page_title('devise_passwords', 'edit')
  %p
    お好きなパスワード(8文字以上)を再設定します。
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .row
      .columns.large-4
        = f.label :password, User.human_attribute_name('new_password'), class: 'inline required'
      .columns.large-8
        = f.password_field :password, autofocus: true
    .row
      .columns.large-4
        = f.label :password_confirmation, nil, class: 'inline required'
      .columns.large-8
        = f.password_field :password_confirmation
    .row.actions
      .columns.large-12
        = f.submit t('helpers.submit.change_my_password')

= content_for :title do
  #{make_page_title('devise_passwords', 'edit')} | #{site_title}
