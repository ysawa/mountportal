.columns.small-12.large-6.panel.large-centered
  %h2= make_page_title('devise_registrations', 'new')
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .row
      .columns.large-4
        = f.label :email
      .columns.large-8
        = f.email_field :email, autofocus: true
    .row
      .columns.large-4
        = f.label :password
      .columns.large-8
        = f.password_field :password
    .row
      .columns.large-4
        = f.label :password_confirmation
      .columns.large-8
        = f.password_field :password_confirmation
    .row.actions
      .columns.large-12
        = f.submit t('helpers.submit.sign_up'), class: 'button expand success'

= content_for :title do
  #{make_page_title('devise_registrations', 'new')} | #{site_title}
