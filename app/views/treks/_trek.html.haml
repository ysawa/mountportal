.row.trek
  .small-2.large-1.columns
    = decorator.picture
  .small-10.large-11.columns
    %h2
      = decorator.name
      = decorator.published
    .info
      - if trek.scheduled_from_date || trek.scheduled_to_date
        = decorator.scheduled_from_date
        ã€œ
        = decorator.scheduled_to_date
      - else
        = t('messages.unknown_schedule')
- trek.comments.each do |comment|
  .row.comment
    .small-2.large-1.columns
      = UserDecorator.new(comment.author).face
    .small-10.large-11.columns
      %p
        = comment.content
- if user_signed_in?
  = render 'comments/form_inline', trek: @trek, comment: Comment.new
