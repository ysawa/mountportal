- decorator = TrekDecorator.new(@trek)
.columns.small-12.large-12
  = render 'treks/trek', trek: @trek, decorator: decorator

  .row
    .columns
      - if user_signed_in? && @trek.creator == current_user
        = link_to t('helpers.buttons.edit_model', model: Trek.model_name.human), edit_trek_path(@trek), class: 'button small'
        = link_to t('helpers.buttons.destroy_model', model: Trek.model_name.human), trek_path(@trek), method: 'delete', class: 'button alert small', 'data-skip-ajax' => true, confirm: t('confirms.are_you_sure_you_want_to_delete_it')

= content_for :title do
  - if @trek.name?
    #{@trek.name} | #{site_title}
  - else
    #{make_page_title('treks', 'show')} | #{site_title}
