= form_for @trek do |f|
  - if @trek.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trek.errors.count, "error")} prohibited this trek from being saved:"
      %ul
        - @trek.errors.full_messages.each do |msg|
          %li= msg
  .row
    .columns.large-3
      = f.label :name, nil, class: 'inline required'
    .columns.large-9
      = f.text_field :name
  .row
    .columns.large-3
      = f.label :scheduled_from, nil, class: 'inline'
    .columns.large-9
      = f.text_field :scheduled_from, value: (f.object.scheduled_from ? l(f.object.scheduled_from, format: :form) : nil)
  .row
    .columns.large-3
      = f.label :scheduled_to, nil, class: 'inline'
    .columns.large-9
      = f.text_field :scheduled_to, value: (f.object.scheduled_to ? l(f.object.scheduled_to, format: :form) : nil)
  .row.actions
    .columns.large-12
      = f.submit t('helpers.submit.save'), class: 'button expand'
