= form_for @trek do |f|
  - if @trek.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trek.errors.count, "error")} prohibited this trek from being saved:"
      %ul
        - @trek.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
