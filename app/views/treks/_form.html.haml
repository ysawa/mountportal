= form_for @trek, html: { class: 'custom' } do |f|
  - if @trek.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trek.errors.count, "error")} prohibited this trek from being saved:"
      %ul
        - @trek.errors.full_messages.each do |msg|
          %li= msg
  .row
    .columns.large-3
      = f.label :name, nil, class: 'inline required'
    .columns.large-9
      = f.text_field :name
  .row
    .columns.large-3
      = f.label :scheduled_from_date, f.object.class.human_attribute_name('scheduled_from'), class: 'inline'
    .columns.large-6
      = f.text_field :scheduled_from_date, class: 'date'
    .columns.large-3
      - options = time_options_for_select
      = f.select :scheduled_from_time, options
  .row
    .columns.large-3
      = f.label :scheduled_to, nil, class: 'inline'
    .columns.large-9
      = f.text_field :scheduled_to, value: (f.object.scheduled_to ? l(f.object.scheduled_to, format: :form) : nil), class: 'date'
  .row.actions
    .columns.large-12
      = f.submit t('helpers.submit.save'), class: 'button expand'
